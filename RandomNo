package test;
import java.util.Scanner;
public class Project {
	

	public static void main(String[] args) {
		int randomNo=(int)(Math.random()*100);
		Scanner sc=new Scanner(System.in);
		int myNumber=0;
		do {
			System.out.println(" enter your no(1-100)");
			myNumber=sc.nextInt();
			if(randomNo==myNumber) {
				System.out.println(" correct numbert");
				break;
			}
			else if (myNumber>randomNo) {
				System.out.println(" large number");
			}
			else {
				System.out.println(" small number");
			}
		}while(myNumber>=0);
		
		System.out.println(" my random no is "+randomNo);
	}

}
